<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainBluetoothActivity">

    <TextView
        android:id="@+id/statusMessage"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:height="60dp"
        android:paddingStart="0dp"
        android:layout_marginTop="60dp"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textSpace"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/bluetoothConfiguration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:height="40dp"
        android:textSize="30sp"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/discoverDevices"
        android:id="@+id/button_DiscoveredDevices"
        android:onClick="discoverDevices"
        android:height="100dp"
        android:background="@android:color/holo_blue_dark"
        android:width="80dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:textSize="30sp"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/button_PairedDevices"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pairedDevices"
        android:id="@+id/button_PairedDevices"
        android:onClick="searchPairedDevices"
        android:height="100dp"
        android:background="@android:color/holo_blue_dark"
        android:textSize="30sp"
        android:layout_above="@+id/textSpace"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/authors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/authors"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentStart="true" />

</RelativeLayout>
